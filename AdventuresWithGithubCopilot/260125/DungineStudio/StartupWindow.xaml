<Window x:Class="DungineStudio.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dungine Studio"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="30">
            <StackPanel>
                <TextBlock Text="Dungine Studio" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Text Adventure Game Designer" 
                          FontSize="16" 
                          Foreground="#BDC3C7" 
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="40">
            <TextBlock Text="What would you like to do?" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Foreground="#2C3E50"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <!-- Game Type Selection -->
            <Border Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="30,20"
                    Margin="0,0,0,15"
                    Cursor="Hand"
                    MouseEnter="GameTypeCard_MouseEnter"
                    MouseLeave="GameTypeCard_MouseLeave"
                    MouseLeftButtonUp="CreateTextGame_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock Text="?? Create Text-Based Adventure Game" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Build immersive text adventures with locations, items, and puzzles" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="30,20"
                    Cursor="Hand"
                    MouseEnter="GameTypeCard_MouseEnter"
                    MouseLeave="GameTypeCard_MouseLeave"
                    MouseLeftButtonUp="OpenExisting_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock Text="?? Open Existing Cartridge" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Continue working on an existing game project" 
                              FontSize="12" 
                              Foreground="#7F8C8D"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20">
            <TextBlock Text="More game types coming soon!" 
                      FontSize="11" 
                      Foreground="#95A5A6"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
