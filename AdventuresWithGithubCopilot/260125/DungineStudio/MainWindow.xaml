<Window
    x:Class="DungineStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DungineStudio"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dungine Studio - Text Adventure Game Designer"
    Width="1200"
    Height="700"
    mc:Ignorable="d">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="#ECF0F1" Padding="12" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="New Cartridge" Command="{Binding NewGameCommand}" Style="{StaticResource ToolbarButton}"/>
                <Button Content="Open Cartridge" Command="{Binding OpenCartridgeCommand}" Style="{StaticResource ToolbarButton}"/>
                <Button Content="Save Cartridge" Command="{Binding SaveCartridgeCommand}" Style="{StaticResource ToolbarButton}"/>
                <TextBlock Text="●" Foreground="Red" FontSize="16" VerticalAlignment="Center" Margin="8,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Locations List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0" Padding="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Locations" Style="{StaticResource SectionHeader}"/>
                    
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="+ Add" Command="{Binding AddLocationCommand}" Style="{StaticResource ActionButton}" Width="80"/>
                        <Button Content="Delete" Command="{Binding DeleteLocationCommand}" Style="{StaticResource DeleteButton}" Width="80" Margin="8,0,0,0"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Locations}" 
                             SelectedItem="{Binding SelectedLocation}"
                             DisplayMemberPath="Name"
                             BorderBrush="#BDC3C7"/>
                </DockPanel>
            </Border>

            <!-- Center Panel - Location Details -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Game Settings" Style="{StaticResource SectionHeader}" FontSize="16"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Location ID:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding StartLocationId, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Genre:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" SelectedValue="{Binding Genre, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" Padding="6" Margin="0,0,0,10">
                            <ComboBoxItem>High Fantasy</ComboBoxItem>
                            <ComboBoxItem>Horror</ComboBoxItem>
                            <ComboBoxItem>Mystery</ComboBoxItem>
                            <ComboBoxItem>Romance</ComboBoxItem>
                            <ComboBoxItem>Science Fiction</ComboBoxItem>
                            <ComboBoxItem>Western</ComboBoxItem>
                        </ComboBox>
                    </Grid>

                    <Separator Margin="0,10,0,20"/>

                    <TextBlock Text="Location Details" Style="{StaticResource SectionHeader}" FontSize="16"/>
                    
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLocation}" Value="{x:Null}">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel>
                            <TextBlock Text="Location ID:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LocationId, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,15"/>

                            <TextBlock Text="Location Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LocationName, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,15"/>

                            <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LocationDescription, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="100" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="6"
                                     Margin="0,0,0,15"/>

                            <Separator Margin="0,10,0,20"/>

                            <TextBlock Text="Exits" Style="{StaticResource SectionHeader}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="+ Add Exit" Command="{Binding AddExitCommand}" Style="{StaticResource ActionButton}" Width="100"/>
                                <Button Content="Delete" Command="{Binding DeleteExitCommand}" CommandParameter="{Binding SelectedExit}" Style="{StaticResource DeleteButton}" Width="80" Margin="8,0,0,0"/>
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding Exits}"
                                      SelectedItem="{Binding SelectedExit}"
                                      Height="150"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="*"/>
                                    <DataGridTextColumn Header="Target Location" Binding="{Binding TargetLocationId}" Width="2*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Items -->
            <Border Grid.Column="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="1,0,0,0" Padding="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Items" Style="{StaticResource SectionHeader}"/>
                    
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="+ Add" Command="{Binding AddItemCommand}" Style="{StaticResource ActionButton}" Width="80"/>
                        <Button Content="Delete" Command="{Binding DeleteItemCommand}" Style="{StaticResource DeleteButton}" Width="80" Margin="8,0,0,0"/>
                    </StackPanel>

                    <ListBox DockPanel.Dock="Top"
                             ItemsSource="{Binding Items}" 
                             SelectedItem="{Binding SelectedItem}"
                             DisplayMemberPath="Name"
                             Height="150"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Item Details" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="Item ID:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ItemId, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,15"/>

                            <TextBlock Text="Item Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}" Padding="6" Margin="0,0,0,15"/>

                            <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ItemDescription, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="100" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="6"
                                     Margin="0,0,0,15"/>

                            <CheckBox Content="Can be taken" IsChecked="{Binding ItemIsPortable}" Margin="0,0,0,15"/>

                            <TextBlock Text="Aliases (comma-separated):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ItemAliases, UpdateSourceTrigger=PropertyChanged}" Padding="6"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
